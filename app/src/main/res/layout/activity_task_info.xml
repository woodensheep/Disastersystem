<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_toolbar_height"
        android:background="@color/c1olorblue">

        <TextView
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="已完成任务"
            android:textColor="@color/c1olorwhite"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_btn_search"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_task_id"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="left|center"
                    android:paddingLeft="15dp"
                    android:text="2016第7号"
                    android:textColor="@color/c1olorblue"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tv_workers_time"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="left|center"
                    android:paddingLeft="30dp"
                    android:text="发起人：       时间"
                    android:textColor="@color/c1olorgray" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_btn"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_disaster"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="灾害点："
                        android:textColor="@color/c1olorblack"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0.1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@color/c1olorgray" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/c1olorgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_kind"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="发生时间："
                        android:textColor="@color/c1olorblack"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0.1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@color/c1olorgray" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/c1olorgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="调查地点："
                        android:textColor="@color/c1olorblack"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0.1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@color/c1olorgray" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/c1olorgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_survey_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="调查时间："
                        android:textColor="@color/c1olorblack"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0.1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@color/c1olorgray" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/c1olorgray" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_township"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="所属乡镇："
                        android:textColor="@color/c1olorblack"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0.1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@color/c1olorgray" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/c1olorgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_task_reporter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="调查人："
                        android:textColor="@color/c1olorblack"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0.1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@color/c1olorgray" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_btn_search"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_task_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="10dp"
                    android:paddingLeft="5dp"
                    android:text="任务状态："
                    android:textColor="@color/c1olorblack"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


    <Button
        android:id="@+id/btn_task_com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/com_btn"
        android:text="查看反馈信息"
        android:textColor="@color/c1olorwhite"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textSize="26sp" />


</LinearLayout>
