<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorgray"
                android:gravity="center"
                android:text="灾害点图片"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_textSize" />

            <ImageView
                android:id="@+id/iv_base_info_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorgray"
                android:gravity="center"
                android:text="名称"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />

            <TextView
                android:id="@+id/tv_base_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="@dimen/fill_Info_textSize" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorgray"
                android:gravity="center"
                android:text="经纬度"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经度："
                    android:textSize="@dimen/fill_Info_textSize" />

                <TextView
                    android:id="@+id/tv_base_info_lng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/fill_Info_textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纬度："
                    android:textSize="@dimen/fill_Info_textSize" />

                <TextView
                    android:id="@+id/tv_base_info_lat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/fill_Info_textSize" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorgray"
                android:gravity="center"
                android:text="地址"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />

            <TextView
                android:id="@+id/tv_base_info_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="@dimen/fill_Info_textSize" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorgray"
                android:gravity="center"
                android:text="联系人信息"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人："
                    android:textSize="@dimen/fill_Info_textSize" />

                <TextView
                    android:id="@+id/tv_base_info_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/fill_Info_textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话号："
                    android:textSize="@dimen/fill_Info_textSize" />

                <TextView
                    android:id="@+id/tv_base_info_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/fill_Info_textSize" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorgray"
                android:gravity="center"
                android:text="等级信息"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />

            <TextView
                android:id="@+id/tv_base_info_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="@dimen/fill_Info_textSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorgray"
                android:gravity="center"
                android:text="灾害点类别"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />


            <TextView
                android:id="@+id/tv_base_info_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="@dimen/fill_Info_textSize" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorgray"
                android:gravity="center"
                android:text="是否为灾害点"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />

            <TextView
                android:id="@+id/tv_base_info_is_disaster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="@dimen/fill_Info_textSize" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>