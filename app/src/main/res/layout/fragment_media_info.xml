<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/color_weak_yellow"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mediainfo_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@mipmap/take_photo" />

                <ImageView
                    android:id="@+id/iv_mediainfo_video"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@mipmap/take_video" />

                <ImageView
                    android:id="@+id/iv_mediainfo_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@mipmap/take_audio" />

                <ImageView
                    android:id="@+id/iv_mediainfo_folder"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@mipmap/take_folder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="图片列表"
                    android:textColor="@color/c1olorwhite"
                    android:background="@color/c1olorblue"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/fill_Info_titleSize" />
                <GridLayout
                    android:id="@+id/gl_mediainfo_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:columnCount="3">

                </GridLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="视频列表"
                    android:textColor="@color/c1olorwhite"
                    android:background="@color/c1olorblue"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/fill_Info_titleSize" />
                <GridLayout
                    android:id="@+id/gl_mediainfo_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:columnCount="3">

                </GridLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="音频列表"
                    android:textColor="@color/c1olorwhite"
                    android:background="@color/c1olorblue"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/fill_Info_titleSize" />
                <GridLayout
                    android:id="@+id/gl_mediainfo_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:columnCount="3">

                </GridLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_mediainfo_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存"
                android:layout_margin="5dp"
                android:textColor="@color/c1olorwhite"
                android:background="@color/c1olorblue"
                android:textSize="25sp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
