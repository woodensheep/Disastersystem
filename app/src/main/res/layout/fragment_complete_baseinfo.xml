<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfc2c5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <!--灾害点图片-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/c1olorwhite"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/textview_bg"
                android:padding="10dp"
                android:text="灾害点图片"
                android:textSize="16sp"
                android:textColor="@color/textview_color"/>
            <ImageView
                android:id="@+id/iv_base_info_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="6dp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>

        <!--名称-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/c1olorwhite"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="名称："
                android:textSize="16sp"
                android:textColor="@color/textview_color"
                android:id="@+id/textView2" />

            <TextView
                android:id="@+id/tv_base_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="@dimen/fill_Info_textSize"/>
        </LinearLayout>

        <!--经纬度-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/c1olorwhite"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/textview_bg"
                android:padding="10dp"
                android:text="经纬度"
                android:textSize="16sp"
                android:textColor="@color/textview_color"/>
            <TextView
                android:id="@+id/tv_base_info_lng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fill_Info_textSize"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="number|numberDecimal" />

            <TextView
                android:id="@+id/tv_base_info_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="number|numberDecimal"
                android:textSize="@dimen/fill_Info_textSize" />
        </LinearLayout>

        <!--地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/c1olorwhite"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="地址："
                android:textSize="16sp"
                android:textColor="@color/textview_color"/>
            <TextView
                android:id="@+id/tv_base_info_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="@dimen/fill_Info_textSize" />
        </LinearLayout>

        <!--联系人信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/c1olorwhite"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/textview_bg"
                android:padding="10dp"
                android:text="联系人信息"
                android:textSize="16sp"
                android:textColor="@color/textview_color"/>
            <TextView
                android:id="@+id/tv_base_info_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/fill_Info_textSize" />
            <TextView
                android:id="@+id/tv_base_info_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/fill_Info_textSize" />
        </LinearLayout>

        <!--等级信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/c1olorwhite"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="等   级   信  息："
                android:textSize="16sp"
                android:textColor="@color/textview_color"/>

            <TextView
                android:id="@+id/tv_base_info_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="@dimen/fill_Info_textSize">
            </TextView>
        </LinearLayout>

        <!--灾害点类别-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/c1olorwhite"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="灾 害 点 类 别："
                android:textSize="16sp"
                android:textColor="@color/textview_color"
                android:id="@+id/textView3" />

            <TextView
                android:id="@+id/tv_base_info_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="@dimen/fill_Info_textSize" />
        </LinearLayout>

        <!--是否为灾害点-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/c1olorwhite"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="是否为灾害点："
                android:textSize="16sp"
                android:textColor="@color/textview_color"/>
            <TextView
                android:id="@+id/tv_base_info_is_disaster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="@dimen/fill_Info_textSize">
            </TextView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>