<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorblue"
                android:gravity="center"
                android:text="图片列表"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_media_info_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorblue"
                android:gravity="center"
                android:text="视频"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_media_info_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorblue"
                android:gravity="center"
                android:text="录音"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_media_info_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/c1olorblue"
                android:gravity="center"
                android:text="文件"
                android:textColor="@color/c1olorwhite"
                android:textSize="@dimen/fill_Info_titleSize" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_media_info_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>